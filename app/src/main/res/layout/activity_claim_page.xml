<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/lb_Cus_Name"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_name" />

            <TextView
                android:id="@+id/tvCus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:text="@string/textview"
                android:textColor="@color/black"
               />
            <TextView
                android:id="@+id/lb_RequestID"
                android:layout_marginStart="260dp"
                android:layout_marginTop="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_id" />

            <TextView
                android:id="@+id/tvRequestID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="260dp"
                android:layout_marginTop="200dp"
                android:text="@string/textview"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/lb_From"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="260dp"
                android:layout_marginTop="100dp"
                android:text="@string/from" />



            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="260dp"
                android:layout_marginTop="120dp"
                android:inputType="textMultiLine"
                android:text="@string/textview"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/lb_CusNumber"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/claim_number" />

            <TextView
                android:id="@+id/tvClaimNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="70dp"
                android:text="@string/textview"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvClaimID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="70dp"
                android:visibility="invisible"
                android:text="@string/textview"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lb_Invoice"
                android:layout_marginStart="30dp"
                android:layout_marginTop="95dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invoice_number" />

            <TextView
                android:id="@+id/tvInvoiceNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="115dp"
                android:text="@string/textview"
                android:textColor="@color/black"
               />

            <TextView
                android:id="@+id/lb_Offer"
                android:layout_marginStart="30dp"
                android:layout_marginTop="140dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_code" />

            <TextView
                android:id="@+id/tvOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="160dp"
                android:text="@string/textview"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lb_ClaimDate"
                android:layout_marginStart="30dp"
                android:layout_marginTop="185dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/claim_date" />

            <TextView
                android:id="@+id/tvClaimDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="205dp"
                android:text="@string/textview"
                android:textColor="@color/black" />




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/lb_Currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/currencytext" />

            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:text="@string/textview"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lb_Overage"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overage" />

            <TextView
                android:id="@+id/tvOverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="70dp"
                android:text="@string/textview"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/lb_Amount"
                android:layout_marginStart="30dp"
                android:layout_marginTop="95dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_amount" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="115dp"
                android:text="@string/textview"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/lb_Cus_Date"
                android:layout_marginStart="30dp"
                android:layout_marginTop="140dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_reference_date" />

            <TextView
                android:id="@+id/tvCusDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="160dp"
                android:text="@string/textview"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/lb_Settlement"
                android:layout_marginStart="30dp"
                android:layout_marginTop="185dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settlement_method" />

            <TextView
                android:id="@+id/tvSettlement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="205dp"
                android:text="@string/textview"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/lb_Type"
                android:layout_marginStart="210dp"
                android:layout_marginTop="185dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/claim_type" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                android:layout_marginTop="205dp"
                android:text="@string/textview"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/lb_BillTo"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bill_to" />

            <TextView
                android:id="@+id/tvBillTo"
                android:layout_width="167dp"
                android:layout_height="49dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:inputType="textMultiLine"
                android:text="@string/textview"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/lb_BillToAcc"
                android:layout_marginStart="210dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bill_to_account" />

            <TextView
                android:id="@+id/tvBillToAcc"
                android:layout_width="176dp"
                android:layout_height="49dp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="25dp"
                android:inputType="textMultiLine"
                android:text="@string/textview"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lb_ShipTo"
                android:layout_marginStart="30dp"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ship_to" />

            <TextView
                android:id="@+id/tvShipTo"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="120dp"
                android:inputType="textMultiLine"
                android:text="@string/textview"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/lb_lb_ShipToAcc"
                android:layout_marginStart="210dp"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ship_to_account" />

            <TextView
                android:id="@+id/tvShipToAcc"
                android:layout_width="179dp"
                android:layout_height="51dp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="120dp"
                android:inputType="textMultiLine"
                android:text="@string/textview"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <Button
            android:id="@+id/btnApprove"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="20dp"
            android:background="@color/success"
            android:text="@string/approve"
            android:textColor="@color/white">

        </Button>

        <Button
            android:id="@+id/btnReject"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/design_default_color_error"
            android:text="@string/reject"
            android:textColor="@color/white"></Button>



    </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>


<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/claimnav"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_gravity="bottom"
    android:background="@color/third"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:menu="@menu/claim_nav"
    android:theme="@style/BottomNavigationTheme"/>

</androidx.constraintlayout.widget.ConstraintLayout>